<h1 class="text-center"> Set an item count</h1>

<form>
  <div class="form-group row justify-content-center mt-3">
    <label for="sku_code" class="col-md-2 col-form-label">Sku Code</label>
    <div class="col-md-3">
      <%= text_field_tag :sku_code, @product.sku_code, id: 'sku_code', class: 'form-control', disabled: true  %>
    </div>
  </div>
  <div class="form-group row justify-content-center my-3">
    <label for="name" class="col-md-2 col-form-label">Product Name</label>
    <div class="col-md-3">
      <%= text_field_tag :name, @product.name , id: "name", 
      class: 'form-control', disabled: true  %>
    </div>
  </div>
  <div class="form-group row justify-content-center mb-3">
    <label for="price" class="col-md-2 col-form-label">Price</label>
    <div class="col-md-3">
      <%= text_field_tag :price, @product.price, id: 'price', 
      class: 'form-control', disabled: true  %>
    </div>
  </div>
  <div class="form-group row justify-content-center mb-3">
    <label for="select_warehouse" class="col-md-2 col-form-label">Select Warehouse</label>
    <div class="col-md-3">
    <%= select_tag 'Select Warehouse', options_from_collection_for_select(Warehouse.all, "wh_code", "name"), include_blank: 'Select', class: 'form-control', id: 'select_warehouse' %>
    </div>
  </div>
  <div id="warehouse_details"></div> 
</form>

<script>
  $(document).ready(function(){
    $('#select_warehouse').click(function(){
      $.ajax({
        method: 'GET',
        url: "<%= "#{edit_product_path(@product, format: :js)}" %>",
        data: { wh_code: $(this).val() }
      });
    })
  })
</script>