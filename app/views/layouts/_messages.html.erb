<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> mb-0 error-message">
    <ul>
      <li>
        <%= value %>
      </li>
    </ul>
  </div>
<% end %>

<script type="text/javascript">
  $(document).on('turbolinks:load', function(){
    $(".error-message").slideUp(2500);
  })
</script>  